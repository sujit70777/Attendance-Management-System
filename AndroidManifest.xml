<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myclasshelper.sujit007.myclasshelper">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name="android.support.multidex.MultiDexApplication"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClassInformation.ClassActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StudentInformation.AddStudent"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AttendanceInformation.TakeAttendenceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TakingClassList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TakingClassDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StudentListActivity"
            android:label="@string/title_activity_student_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>